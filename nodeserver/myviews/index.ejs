<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div>
        <div class="content">
            <h2>All blogs</h2>
            <% if(blogs.length >0) { %>
                <% blogs.forEach(blog => {%>
                <a href="/blogs/<%= blog._id %>" class="single">            
                    <h2 class= "title"><%= blog.title %></h2>
                    <p class = "desc"><%= blog.snippet %></p>
                </a>
            <% } ) %>
            <% } else { %>
             <p>There are no blogs to display..</p>
            <% } %>

        </div>
    </div>
    
    <%- include('./partials/footer.ejs') %>

</body>
</html>